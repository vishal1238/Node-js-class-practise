<body>
    <h1>Edit Product Form</h1>
    <form action="/<%= product._id %>/save-product" method="POST">
      <p><input type="text" value="<%= product.name  %>" name="name" placeholder="Product Name" /></p>
    <p><input type="text" value="<%= product.description  %>" name="description" placeholder="Product Description"></p>
<p><input type="number" value="<%= product.price  %>" name="price" placeholder="Product Price"></p>   
<p><input type="text" name="imageurl" value="<%= product.imageurl  %>" placeholder="Image URL"></p> 
<p><button>Save</button></p>
</form>
</body>
